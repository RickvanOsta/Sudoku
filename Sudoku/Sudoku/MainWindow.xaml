<Window x:Class="Sudoku.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WollahSudoku" Height="500" Width="450"
        DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <DataGrid Height="450" Width="366" ItemsSource="{Binding MySudokuTable}" Margin="0,0,0,19" FontSize="20" BorderThickness="8" ColumnWidth="30" Padding="40" HeadersVisibility="None" CanUserAddRows="False" CanUserDeleteRows="False" CellStyle="{StaticResource DataGridContentCellCentering}"/>
        

        <Button Content="Set" Command="{Binding SetValues}" Width="50" Height="20" VerticalAlignment="Bottom" ></Button>
    </Grid>


</Window>
